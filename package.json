    "bignumber.js": "^9.0.0",
    "core-js": "^3.6.5",
    "d3-shape": "^1.3.7",
    "decimal.js-light": "^2.5.0",
    "electron-log": "^4.3.1",
    "request": "^2.88.2",
    "style-resources-loader": "^1.3.3",
    "vue": "^2.6.12",
