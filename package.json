    "@vue/cli-plugin-eslint": "^4.5.9",
    "@vue/cli-service": "^4.5.9",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^5.2.1",
    "electron": "^9.4.0",
    "electron-builder": "^22.9.1",
